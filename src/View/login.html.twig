{% extends 'layout.html.twig' %}

{% block style %}
<link rel="stylesheet" type="text/css" href="assets/css/login.css">
{% endblock %}
{% block title %}Blog des cucurbitacées{% endblock %}

{% block content %}

    <div class="container">
        <div class="blocLogin">
            <h1 class="text-center pb-5">Bienvenue sur le Blog des Cucurbitacées</h1>
            <form class="text-center" action="" method="post">
                <p><input type="text" name="login" id="login" placeholder="Nom d'utilisateur"></p>
                <p><input type="password" name="password" id="password" placeholder="Mot de passe"></p>
                <p><input type="submit" name="submit" id="submit" value="Se connecter"></p>
            </form>
        </div>
    </div>

{% endblock %}